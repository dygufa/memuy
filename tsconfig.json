{
    "compilerOptions": {
        "outDir": "./dist/",
        "strict": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "es6",
        "target": "es5",
        "lib": [
            "es2018",
            "dom"
        ],
        "moduleResolution": "node",
        "jsx": "react",
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true
    },
    "include": [
        "./src/**/*"
    ]
}
